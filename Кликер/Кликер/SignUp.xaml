<Window x:Class="Кликер.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Кликер"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SignUp" Height="185" Width="404">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Введите имя пользователя и пароль" HorizontalAlignment="Center"  Margin="10,10,10,7"/>
            <StackPanel Margin="10,0,10,10">
                <TextBlock>Имя пользователя:</TextBlock>
                <TextBox x:Name="UsernameTextBox"/>
            </StackPanel>
            <StackPanel Margin="10,0,10,10">
                <TextBlock>Пароль:</TextBlock>
                <PasswordBox x:Name="PasswordBox"/>
            </StackPanel>
            <Button Content="Сохранить" Margin="10,5,10,10" Background="White" Click="Button_Click_Save" BorderBrush="#00707070" Width="140" />
        </StackPanel>
    </Grid>
</Window>
